<h1>Create</h1>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Description" class="control-label"></label>
                <input asp-for="Dish.Description" class="form-control" />
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.CtegoryId" class="control-label"></label>
                <input asp-for="Dish.CtegoryId" class="form-control" />
                <span asp-validation-for="Dish.CtegoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Price" class="control-label"></label>
                <input asp-for="Dish.Price" class="form-control" />
                <span asp-validation-for="Dish.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <input type="hidden" asp-for="Dish.Category" />
            </div>
            <div class="form-group">
                <label asp-for="Dish.Category" class="control-label"></label>
                <select asp-for="Dish.Category" asp-items="@((SelectList)ViewData["CategoryId"])" class="form-control"></select>
                <span asp-validation-for="Dish.Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Photo" class="form-label">Изображение</label>
                <input asp-for="Photo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}